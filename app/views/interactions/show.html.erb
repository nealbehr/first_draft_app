<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Interaction #<%= @interaction.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Like</dt>
              <dd><%= @interaction.like %></dd>

              <dt>Product</dt>
              <dd><%= @interaction.product_id %></dd>

              <dt>User</dt>
              <dd><%= @interaction.user_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/interactions" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/interactions/<%= @interaction.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_interaction/<%= @interaction.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
