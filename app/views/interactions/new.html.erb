<!-- Validation failure messages -->

<% if @interaction.errors.any? %>
  <% @interaction.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Interaction</h3>
      </div>
      <div class="panel-body">
        <form action="/create_interaction" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for like -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="like">
                  <input type="checkbox" id="like" name="like" value="1" <%= "checked" if @interaction.like %>>
                  Like
                </label>
              </div>
            </div>
          </div>

          <!-- Label and input for product_id -->
          <div class="form-group">
            <label for="product_id" class="col-sm-2 control-label">
              Product
            </label>
            <div class="col-sm-10">
              <input type="text" id="product_id" name="product_id" placeholder="Product" class="form-control" value="<%= @interaction.product_id %>">
            </div>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @interaction.user_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Interaction
              </button>
              or
              <a href="/interactions">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
